{
  "categories": {
    "feature": {
      "label": "Features",
      "emoji": "âœ¨",
      "patterns": [
        "src/controllers/**",
        "src/routes/**",
        "src/services/**"
      ],
      "keywords": ["feat", "feature", "add", "new", "create"]
    },
    "fix": {
      "label": "Bug Fixes",
      "emoji": "ğŸ›",
      "patterns": [
        "src/**/*fix*.js",
        "src/**/*error*.js",
        "src/utils/errorHandler.js"
      ],
      "keywords": ["fix", "bug", "error", "issue", "resolve"]
    },
    "database": {
      "label": "Database Changes",
      "emoji": "ğŸ—„ï¸",
      "patterns": [
        "src/models/**",
        "src/migrations/**"
      ],
      "keywords": ["migration", "schema", "model", "table", "database"]
    },
    "infrastructure": {
      "label": "Infrastructure",
      "emoji": "ğŸ”§",
      "patterns": [
        "src/middleware/**",
        "src/config/**",
        ".github/workflows/**",
        "Dockerfile*",
        "docker-compose*.yml",
        "*.yml",
        "*.yaml"
      ],
      "keywords": ["config", "middleware", "infra", "deploy", "ci/cd"]
    },
    "documentation": {
      "label": "Documentation",
      "emoji": "ğŸ“",
      "patterns": [
        "*.md",
        "API_DOCUMENTATION*.md",
        "README.md",
        "docs/**"
      ],
      "keywords": ["docs", "readme", "documentation"]
    },
    "dependency": {
      "label": "Dependencies",
      "emoji": "ğŸ“¦",
      "patterns": [
        "package.json",
        "package-lock.json",
        "yarn.lock",
        "pnpm-lock.yaml"
      ],
      "keywords": ["depend", "package", "upgrade", "update"]
    },
    "test": {
      "label": "Tests",
      "emoji": "ğŸ§ª",
      "patterns": [
        "**/*.test.js",
        "**/*.spec.js",
        "**/__tests__/**",
        "tests/**",
        "test/**"
      ],
      "keywords": ["test", "spec", "coverage"]
    },
    "refactor": {
      "label": "Refactoring",
      "emoji": "â™»ï¸",
      "patterns": [
        "src/utils/**"
      ],
      "keywords": ["refactor", "cleanup", "optimize", "improve"]
    }
  },
  "ignorePatterns": [
    "node_modules/**",
    ".git/**",
    "logs/**",
    "*.log",
    ".env*",
    "dist/**",
    "build/**",
    "coverage/**",
    ".DS_Store"
  ],
  "outputFormat": {
    "includeStats": true,
    "includeFileList": true,
    "maxFilesListed": 20,
    "groupByCategory": true
  }
}
